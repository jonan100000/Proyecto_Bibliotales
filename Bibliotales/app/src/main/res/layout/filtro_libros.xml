<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- BARRA DE BÚSQUEDA -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:layout_marginEnd="12dp" />

            <EditText
                android:id="@+id/editTextBusqueda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar por título, autor, género o tipo..."
                android:padding="0dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/text_primary_dark"
                android:textColorHint="@color/text_primary_dark"/>

            <ImageView
                android:id="@+id/botonLimpiarBusqueda"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone"
                android:layout_marginStart="12dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CONTADOR DE RESULTADOS -->
    <TextView
        android:id="@+id/textoResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa tu búsqueda"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_background"
        android:textColor="@color/text_primary_dark"
        android:textColorHint="@color/text_primary_dark"/>

    <!-- RECYCLERVIEW PARA RESULTADOS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewResultados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- MENSAJE CUANDO NO HAY RESULTADOS -->
    <LinearLayout
        android:id="@+id/layoutSinResultados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_search"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textoMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busca libros por título, autor, género o tipo"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejemplo: 'Ciencia Ficción', 'Admin', 'Rebuild World', 'Novela'"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>