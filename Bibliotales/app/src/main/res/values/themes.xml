<resources>

    <!-- Tema principal con colores DARK por defecto -->
    <style name="Theme.BookReader" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimaryDark">@color/brand_primary_dark</item>

        <!-- Colores modo oscuro (por defecto) -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="colorSurface">@color/surface_dark</item>


        <!-- Forzar dark automaticamente -->
        <item name="android:forceDarkAllowed">true</item>

        <item name="android:fontFamily">@font/lora_family</item>
        <item name="fontFamily">@font/lora_family</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- PDF THEME -->
    <style name="Theme.PdfRaw" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:editTextBackground">@null</item>
    </style>


